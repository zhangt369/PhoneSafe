<resources>

    <!-- Base application theme............Theme.AppCompat.Light.NoActionBar...................
    .......................................Theme.AppCompat.Light.DarkActionBar ................-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colortitle</item>
        <item name="colorPrimaryDark">@color/colortitle</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 自定义样式，标题样式-->
    <style name="TitleBarStyle">
        <item name="android:id">@id/title_bar_tv</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/colortitle</item>
        <item name="android:gravity">center</item>
        <item name="android:text">标题栏</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="DownSetupButtonStyle">
        <item name="android:onClick">next</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:text">下一步</item>
        <item name="android:background">@drawable/setup_btn_select</item>
        <item name="android:drawableRight">@drawable/next</item>
    </style>

    <style name="UpSetupButtonStyle">
        <item name="android:onClick">pre</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:text">上一步</item>
        <item name="android:background">@drawable/setup_btn_select</item>
        <item name="android:drawableLeft">@drawable/previous</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhangtao.phonesafe.HomeActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textSize="22sp"
        android:background="#12c146"
        android:gravity="center"
        android:text="@string/tv_home_title"/>

    <!--   android:focusable="true"
        android:focusableInTouchMode="true"-->
    <com.example.zhangtao.phonesafe.view.FocusableTextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="@string/tv_home_cast"
        android:singleLine="true"
        android:ellipsize="marquee"/>
    <GridView
        android:id="@+id/home_gv"
        android:layout_marginTop="15dp"
        android:verticalSpacing="15dp"
        android:gravity="center_horizontal"
        android:numColumns="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></GridView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:zhangt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhangtao.phonesafe.SettingActivity"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#12c146"
        android:gravity="center"
        android:text="@string/tv_setting_title"
        android:textSize="22sp"/>

    <com.example.zhangtao.phonesafe.view.SettingView
        android:id="@+id/update_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhangt:des_off="自动更新关闭"
        zhangt:des_on="自动更新开启"
        zhangt:safe_setting_title="自动更新">
    </com.example.zhangtao.phonesafe.view.SettingView>

    <com.example.zhangtao.phonesafe.view.SettingView
        android:id="@+id/soft_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhangt:des_off="软件锁关闭"
        zhangt:des_on="软件锁开启"
        zhangt:safe_setting_title="软件锁">
    </com.example.zhangtao.phonesafe.view.SettingView>

</LinearLayout>
